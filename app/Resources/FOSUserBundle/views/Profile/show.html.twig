{% extends 'base.html.twig' %}

{% block sections %}
    <section>
        <header class="main">
            <h2>Informations personnelles</h2>
        </header>

        <div class="table-wrapper">
            <table>
                <tbody>
                    <tr>
                        <td>Prénom</td>
                        <td>{{ user.firstname }}</td>
                    </tr>
                    <tr>
                        <td>Nom</td>
                        <td>{{ user.lastname }}</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <td>Téléphone</td>
                        <td>{{ user.phone }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}
