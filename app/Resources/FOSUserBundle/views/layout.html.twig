{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div class="row align-center">
        <div class="col col-3">
            <fieldset>
                <legend>Connexion</legend>

                {% if error %}
                    <div class="message error" data-component="message">
                        {{ error.messageKey|trans(error.messageData, 'security') }} <span class="close small"></span>
                    </div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <div class="form-item">
                        <label>{{ 'security.login.username'|trans }}</label>
                        <input type="text" name="_username" value="{{ last_username }}" required="required">
                    </div>

                    <div class="form-item">
                        <label>{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required">
                    </div>

                    <div class="form-item text-center">
                        <button type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
                    </div>
                </form>
            </fieldset>
        </div>
    </div>
{% endblock %}
