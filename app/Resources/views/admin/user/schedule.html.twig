{% extends 'base.html.twig' %}

{% block sections %}
    <section>
        <header class="main">
            <h2>Planning</h2>
        </header>

        {% for flash_message in app.session.flashBag.get('notice') %}
          <div class="box">
              <p>{{ flash_message }}</p>
          </div>
        {% endfor %}

        <div class="box">
            Vous avez {{ cineToValidate }} Cinéscénie(s) à valider
        </div>

        <h3>Dates à venir</h3>

        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Présence</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for cinescenie in cinescenies %}
                    {% if cinescenie.date|date('ymd') >= 'now'|date('ymd') %}
                        <tr>
                            <td>{{ cinescenie.date|date("d/m/y") }}</td>
                            <td>
                                {% for schedule in cinescenie.schedules %}
                                    <a href="{{ path('userGeneral', {'userSlug': schedule.user.username}) }}">{{ schedule.user.firstname }} {{ schedule.user.lastname|first }}</a>{% if schedule.activity %} ({{ schedule.activity.name }}){% endif %}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td class="align-right">{{ cinescenie.schedules|length }}</td>
                            <td class="align-right">
                                {% if cinescenie.state == constant('AppBundle\\Entity\\Cinescenie::STATE_VALIDATE') %}
                                    <i class="fa fa-check fa-2x"></i>
                                {% elseif cinescenie.state == constant('AppBundle\\Entity\\Cinescenie::STATE_DRAFT') %}
                                    <a href="{{ path('userScheduleEditActivities', {'cinescenie': cinescenie.id}) }}"><i class="fa fa-pencil fa-2x"></i></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>

        <h3>Dates passées</h3>

        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Présence</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for cinescenie in cinescenies %}
                    {% if cinescenie.date|date('ymd') < 'now'|date('ymd') %}
                        <tr>
                            <td>{{ cinescenie.date|date("d/m/y") }}</td>
                            <td>
                                {% for schedule in cinescenie.schedules %}
                                    <a href="{{ path('userGeneral', {'userSlug': schedule.user.username}) }}">{{ schedule.user.firstname }} {{ schedule.user.lastname|first }}</a>{% if schedule.activity %} ({{ schedule.activity.name }}){% endif %}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td class="align-right">{{ cinescenie.schedules|length }}</td>
                            <td class="align-right">
                                {% if cinescenie.state == constant('AppBundle\\Entity\\Cinescenie::STATE_VALIDATE') %}
                                    <i class="fa fa-check fa-2x"></i>
                                {% else %}
                                    <a href="{{ path('userScheduleEditActivities', {'cinescenie': cinescenie.id}) }}"><i class="fa fa-pencil fa-2x"></i></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}