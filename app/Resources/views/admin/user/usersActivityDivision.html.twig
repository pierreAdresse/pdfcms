{% extends 'base.html.twig' %}

{% block sections %}
    <section>
        <h3>Répartition des rôles</h3>

        <form method="post">
            <div class="row uniform">
                <div class="12u$">
                    <p>Veuillez choisir la date de la Cinéscénie</p>

                    <div class="select-wrapper">
                        <select name="select-cinescenie">
                            {% for cinescenie in cinescenies %}
                                <option value="cinescenie-{{ cinescenie.id }}">{{ cinescenie.date|date('d/m/y') }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="12u$">
                    <ul class="actions align-right">
                        <li><input type="submit" value="Lancer la répartition des rôles" class="special" /></li>
                    </ul>
                </div>
            </div>
        </form>
    </section>
{% endblock %}