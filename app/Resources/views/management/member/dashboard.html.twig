{% extends 'base.html.twig' %}

{% block sections %}
    <section>
        <header class="main">
            <h2>Tableau de bord</h2>
        </header>

	    <h3>Personnes avec moins de 15 séances de présence</h3>

	    <p>
	        {% for member in members %}
	            {% if member.countCinescenies < constant('AppBundle\\Entity\\Cinescenie::MIN') %}
	                <a href="{{ path('memberGeneral', {'member': member[0].id}) }}">{{ member[0].firstname }} {{ member[0].lastname }}</a> |
	            {% endif %}
	        {% endfor %}
	    </p>

	    <h3>Cinéscénie dans lesquelles il manque des personnes</h3>

	    <p>
	        {% for cine in cineComplete %}
                <a href="{{ path('memberScheduleEditActivities', {'cinescenie': cine.cinescenie.id}) }}">
                    {{ cine.cinescenie.date|date("d/m/y") }}
                </a> (besoin de {{ cine.manque }}) |
	        {% endfor %}
	    </p>
    </section>
{% endblock %}