{% extends 'base.html.twig' %}

{% block sections %}
    <section>
        <header class="main">
            <h2>Planning</h2>
        </header>

        <p>
            <i class="fa fa-check"></i> : Date où tous les participants pour les rôles sont trouvés.<br>
            <i class="fa fa-times"></i> : Date où il manque des participants.
        </p>

        {% for flash_message in app.session.flashBag.get('notice') %}
          <div class="box">
              <p>{{ flash_message }}</p>
          </div>
        {% endfor %}

        <h3>Dates à venir</h3>

        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Présence</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for cinescenie in cinescenies %}
                    {% if cinescenie.date|date('ymd') >= 'now'|date('ymd') %}
                        <tr>
                            <td>
                                <a href="{{ path('userScheduleEditActivities', {'cinescenie': cinescenie.id}) }}">
                                    {{ cinescenie.date|date("d/m/y") }}
                                </a>
                                {% if cinescenie.schedules|length == numberActivities %}
                                    <i class="fa fa-check"></i>
                                {% else %}
                                    <i class="fa fa-times"></i>
                                {% endif %} 
                            </td>
                            <td>
                                {% for schedule in cinescenie.schedules %}
                                    {% if schedule.user.deleted %}
                                        {{ schedule.user.firstname }} {{ schedule.user.lastname }}
                                    {% else %}
                                        <a href="{{ path('userGeneral', {'userSlug': schedule.user.username}) }}">{{ schedule.user.firstname }} {{ schedule.user.lastname|first }}</a>
                                    {% endif %}
                                    {% if schedule.activity %} ({{ schedule.activity.name }}){% endif %}
                                    {% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td class="align-right">{{ cinescenie.schedules|length }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>

        <h3>Dates passées</h3>

        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Présence</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for cinescenie in cinescenies %}
                    {% if cinescenie.date|date('ymd') < 'now'|date('ymd') %}
                        <tr>
                            <td>
                                <a href="{{ path('userScheduleEditActivities', {'cinescenie': cinescenie.id}) }}">
                                    {{ cinescenie.date|date("d/m/y") }}
                                </a>
                                {% if cinescenie.schedules|length == numberActivities %}
                                    <i class="fa fa-check"></i>
                                {% else %}
                                    <i class="fa fa-times"></i>
                                {% endif %} 
                            </td>
                            <td>
                                {% for schedule in cinescenie.schedules %}
                                    {% if schedule.user.deleted %}
                                        {{ schedule.user.firstname }} {{ schedule.user.lastname }}
                                    {% else %}
                                        <a href="{{ path('userGeneral', {'userSlug': schedule.user.username}) }}">{{ schedule.user.firstname }} {{ schedule.user.lastname|first }}</a>
                                    {% endif %}
                                    {% if schedule.activity %} ({{ schedule.activity.name }}){% endif %}
                                    {% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td class="align-right">{{ cinescenie.schedules|length }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}